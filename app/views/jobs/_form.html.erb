<%= form_for [@job] do |f| %>
			
	<div class="field">
		<%= f.label :"Job Title" %><br>
		<%= f.text_field :title %>
	</div>

	<div class="field">
		<%= f.label :"Job Description" %><br>
		<%= f.text_area :description %>
	</div>

	<div class="field">
		<%= f.label :"Company Name" %><br>
		<%= f.text_field :company %>
	</div>

	<div class="field">
		<%= f.label :"City" %><br>
		<%= f.text_field :city %>
	</div>

	<div class="field">
		<%= f.label :"Job link" %><br>
		<%= f.text_field :url %>
	</div>

	<div class="actions">
		<%= f.submit "Create a Job", class:"button button_highlight button_block" %>
	</div>
<% end %>